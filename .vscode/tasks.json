{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "cppbuild",
        "label": "C++ Build",
        "command": "C:/msys64/ucrt64/bin/g++.exe",
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "${file}",
          "-o",
          "${workspaceFolder}/main.exe"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": true,
          "clear": false
        },
        "runOptions": {
          "instanceLimit": 1
        }
      }
    ]
  }